
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on event and movie thumbnails
    match /event-thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /movie-thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read on artist profile images
    match /profile-images/{userId}/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth.uid == userId;
    }

    // Verification videos are private and only accessible by the uploader (artist) and admins
    match /verification-videos/{artistId}/{allPaths=**} {
        allow read, write: if request.auth.uid == artistId || request.auth.token.role == "admin";
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
