
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data.
    // Anyone can read public artist profiles.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Events are public to read. Only artists can create/update them.
    // Admin role should be added for moderation if needed.
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth.token.role == "artist" || request.auth.token.role == "admin";
    }

    // Users can only read or create their own tickets.
    match /tickets/{ticketId} {
      allow read, create: if request.auth.uid == request.resource.data.userId;
    }

    // Movies are public to read. Only admins can add them.
    match /movies/{movieId} {
      allow read: if true;
      allow create: if request.auth.token.role == "admin";
    }

    // Users can only manage their own subscriptions.
    match /subscriptions/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Verification requests are write-only for artists and read-only for admins.
    match /verificationRequests/{requestId} {
        allow create: if request.auth.token.role == "artist";
        allow read, update: if request.auth.token.role == "admin";
    }
  }
}
