
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can be read by any authenticated user to list artists, but only modified by themselves.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == userId;
    }

    // Events and Movies can be read by anyone.
    match /events/{eventId} {
      allow read: if true;
      // Only artists can create/update events. (Requires custom claims on token)
      allow write: if request.auth.token.role == "artist";
    }

    match /movies/{movieId} {
      allow read: if true;
      // Only admins can add movies. (Requires custom claims on token)
      allow write: if request.auth.token.role == "admin";
    }
    
    // A user can only read and create their own tickets.
    match /tickets/{ticketId} {
      allow read, create: if request.auth.uid == request.resource.data.userId;
    }
    
    // Subscriptions can only be read or written by the user who owns them.
    match /subscriptions/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Verification requests can be created by artists and read by admins.
    match /verificationRequests/{requestId} {
      allow create: if request.auth.uid != null;
      allow read, update: if request.auth.token.role == "admin";
    }
  }
}
